---
import CallToAction from '~/components/widgets/CallToAction.astro';
import Content from '~/components/widgets/Content.astro';
import Features from '~/components/widgets/Features.astro';
import Features2 from '~/components/widgets/Features2.astro';
import Hero from '~/components/widgets/Hero.astro';
import Steps from '~/components/widgets/Steps.astro';
import Layout from '~/layouts/PageLayout.astro';

const metadata = {
  title: 'Real Estate Services - Comprehensive Solutions for Buyers & Sellers',
};
---

<Layout metadata={metadata}>
  <!-- Hero Section -->
  <Hero
    tagline="Services"
    title="Comprehensive Real Estate Solutions"
    subtitle="From finding your dream home to selling your property at the best price, I provide expert guidance and personalized service throughout your real estate journey."
    actions={[{ variant: 'primary', text: 'Schedule Consultation', href: '/contact', icon: 'tabler:calendar' }]}
    image={{
      src: 'https://images.unsplash.com/photo-1560518883-ce09059eeffa?ixlib=rb-4.0.3&auto=format&fit=crop&w=1740&q=80',
      alt: 'Real Estate Services',
    }}
  />

  <!-- Core Services -->
  <Features
    id="services"
    title="What I Offer"
    subtitle="Full-service real estate solutions tailored to your unique needs"
    columns={3}
    items={[
      {
        title: 'Buyer Representation',
        description:
          'Expert guidance through every step of the home buying process, from property search to closing.',
        icon: 'tabler:home-search',
      },
      {
        title: 'Seller Services',
        description:
          'Professional marketing and negotiation to sell your property quickly and for the best price.',
        icon: 'tabler:building',
      },
      {
        title: 'Property Management',
        description:
          'Complete rental property management including tenant screening and maintenance coordination.',
        icon: 'tabler:key',
      },
      {
        title: 'Market Analysis',
        description:
          'Detailed comparative market analysis to help you make informed pricing and investment decisions.',
        icon: 'tabler:chart-line',
      },
      {
        title: 'Investment Consulting',
        description:
          'Strategic advice for real estate investors looking to maximize returns on property investments.',
        icon: 'tabler:cash',
      },
      {
        title: 'First-Time Buyer Support',
        description:
          'Specialized guidance for first-time homebuyers navigating the purchasing process.',
        icon: 'tabler:users',
      },
    ]}
  />

  <!-- Buyer Services Detail -->
  <Content
    id="buyers"
    isReversed
    tagline="For Buyers"
    title="Finding Your Perfect Home"
    items={[
      {
        title: 'Personalized Property Search',
        description:
          'Access to exclusive listings and off-market properties that match your specific criteria and budget.',
        icon: 'tabler:search',
      },
      {
        title: 'Neighborhood Expertise',
        description:
          'In-depth knowledge of local schools, amenities, commute times, and future development plans.',
        icon: 'tabler:map-pin',
      },
      {
        title: 'Negotiation Support',
        description:
          'Skilled negotiation to secure the best price and favorable terms on your home purchase.',
        icon: 'tabler:handshake',
      },
      {
        title: 'Closing Coordination',
        description:
          'Guidance through inspections, appraisals, and all paperwork to ensure a smooth closing process.',
        icon: 'tabler:clipboard-check',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1560518883-ce09059eeffa?ixlib=rb-4.0.3&auto=format&fit=crop&w=2070&q=80',
      alt: 'Home Buying Services',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">
        Your Home Buying Journey Starts Here
      </h3>
      I understand that buying a home is one of the biggest decisions you'll make. My goal is to make the process
      as smooth and stress-free as possible while ensuring you find the perfect property.
    </Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>

  <!-- Seller Services Detail -->
  <Content
    id="sellers"
    isAfterContent
    tagline="For Sellers"
    title="Selling Your Property with Confidence"
    items={[
      {
        title: 'Professional Photography',
        description:
          'High-quality photos and virtual tours that showcase your property in the best possible light.',
        icon: 'tabler:camera',
      },
      {
        title: 'Strategic Marketing',
        description:
          'Multi-channel marketing strategy including MLS, social media, and targeted advertising to reach qualified buyers.',
        icon: 'tabler:ad',
      },
      {
        title: 'Pricing Strategy',
        description:
          'Data-driven pricing analysis to position your property competitively while maximizing your return.',
        icon: 'tabler:currency-dollar',
      },
      {
        title: 'Staging Consultation',
        description:
          'Expert advice on preparing and staging your home to appeal to the widest range of buyers.',
        icon: 'tabler:sofa',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1600585154340-be6161a56a0c?ixlib=rb-4.0.3&auto=format&fit=crop&w=2070&q=80',
      alt: 'Home Selling Services',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">
        Maximum Exposure, Best Results
      </h3>
      Selling your home shouldn't be stressful. With proven marketing strategies and expert negotiation skills,
      I'll help you sell faster and for the best possible price.
    </Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>

  <!-- Property Management Services -->
  <Content
    id="rentals"
    isReversed
    tagline="For Landlords"
    title="Hassle-Free Property Management"
    items={[
      {
        title: 'Tenant Screening',
        description:
          'Thorough background checks, credit reports, and reference verification to find reliable tenants.',
        icon: 'tabler:user-search',
      },
      {
        title: 'Rent Collection',
        description:
          'Automated rent collection and accounting to ensure consistent cash flow and financial tracking.',
        icon: 'tabler:receipt',
      },
      {
        title: 'Maintenance Coordination',
        description:
          'Network of trusted contractors for repairs and maintenance, available 24/7 for emergencies.',
        icon: 'tabler:tools',
      },
      {
        title: 'Legal Compliance',
        description:
          'Ensure all leases and procedures comply with local, state, and federal housing regulations.',
        icon: 'tabler:scale',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1560518883-ce09059eeffa?ixlib=rb-4.0.3&auto=format&fit=crop&w=2070&q=80',
      alt: 'Property Management Services',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">
        Protect Your Investment
      </h3>
      Let me handle the day-to-day management of your rental properties so you can enjoy the benefits of
      real estate investment without the headaches.
    </Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>

  <!-- Investment Services -->
  <Features2
    id="analysis"
    title="Investment & Analysis Services"
    tagline="For Investors"
    columns={2}
    items={[
      {
        title: 'Market Research',
        description:
          'Comprehensive market analysis including trends, demographics, and growth projections to identify lucrative investment opportunities.',
        icon: 'tabler:chart-dots',
      },
      {
        title: 'Property Valuation',
        description:
          'Accurate property valuations using comparable sales, income approach, and cost analysis methods.',
        icon: 'tabler:calculator',
      },
      {
        title: 'Investment Strategy',
        description:
          'Customized investment strategies based on your financial goals, risk tolerance, and time horizon.',
        icon: 'tabler:target',
      },
      {
        title: 'Portfolio Management',
        description:
          'Ongoing analysis and recommendations to optimize your real estate investment portfolio performance.',
        icon: 'tabler:briefcase',
      },
    ]}
  />

  <!-- Process Steps -->
  <Steps
    title="How I Work With You"
    subtitle="A streamlined process designed to deliver results"
    items={[
      {
        title: 'Step 1: <span class="font-medium">Initial Consultation</span>',
        description:
          'Free consultation to understand your needs, goals, and timeline. We discuss your requirements and I explain how I can help.',
        icon: 'tabler:users',
      },
      {
        title: 'Step 2: <span class="font-medium">Strategy Development</span>',
        description:
          'Create a customized plan based on your specific situation, whether buying, selling, or investing.',
        icon: 'tabler:list-check',
      },
      {
        title: 'Step 3: <span class="font-medium">Execution</span>',
        description:
          'Put the plan into action with regular communication and updates throughout the process.',
        icon: 'tabler:rocket',
      },
      {
        title: 'Step 4: <span class="font-medium">Success & Follow-Up</span>',
        description:
          'Close the transaction successfully and provide ongoing support for any future real estate needs.',
        icon: 'tabler:check',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1522202176988-66273c2fd55f?ixlib=rb-4.0.3&auto=format&fit=crop&w=2070&q=80',
      alt: 'Working Process',
    }}
  />

  <!-- Call to Action -->
  <CallToAction
    actions={[
      {
        variant: 'primary',
        text: 'Get Started Today',
        href: '/contact',
        icon: 'tabler:phone',
      },
      {
        variant: 'secondary',
        text: 'View Properties',
        href: '/properties',
      },
    ]}
    title="Ready to Take the Next Step?"
    subtitle="Whether you're buying, selling, or investing, I'm here to help you achieve your real estate goals. Contact me today for a free consultation."
  />
</Layout>
