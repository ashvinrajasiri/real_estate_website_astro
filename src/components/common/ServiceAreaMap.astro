---
// ServiceAreaMap.astro - Google Maps embed showing service area
interface Props {
  location?: string;
  embedUrl?: string;
  width?: string;
  height?: string;
  className?: string;
}

const {
  location = "Greater Toronto Area, ON, Canada",
  embedUrl = "https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d1479474.6117615772!2d-79.91488437187494!3d43.71837080000001!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f9.5!3m3!1m2!1s0x882b2a1d7471156d%3A0x4ecad8e272e4c2a2!2sGreater%20Toronto%20Area%2C%20ON%2C%20Canada!5e0!3m2!1sen!2sus!4v1710000000000!5m2!1sen!2sus",
  width = "1114",
  height = "477",
  className = "rounded-lg w-full shadow-lg"
} = Astro.props;
---

<section class="px-4 py-16 sm:px-6 mx-auto lg:px-8 lg:py-20 max-w-7xl">
  <div class="text-center mb-12">
    <p class="text-base text-accent dark:text-blue-200 font-semibold tracking-wide uppercase">
      Service Area
    </p>
    <h2 class="text-4xl md:text-5xl font-bold leading-tighter tracking-tighter mb-4 font-heading">
      Serving the Greater Toronto Area
    </h2>
    <p class="max-w-3xl mx-auto text-xl text-muted dark:text-slate-400">
      From downtown Toronto to surrounding communities - I provide expert real estate services throughout the GTA
    </p>
  </div>

  <div class="mt-8">
    <iframe
      src={embedUrl}
      width={width}
      height={height}
      loading="lazy"
      referrerpolicy="no-referrer-when-downgrade"
      class={className}
      title={`Service area map: ${location}`}
      style="border:0;"
      allowfullscreen=""
    />
  </div>
</section>
